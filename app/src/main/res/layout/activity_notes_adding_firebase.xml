<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/ColorAddingNoteActivity"
    tools:context=".NotesAddingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_notes2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp">
            <FrameLayout
                android:id="@+id/frameSaveAnim"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentEnd="true"
                android:padding="15dp">
                <ProgressBar
                    android:id="@+id/progressBar_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminateTint="@color/orange"
                    android:visibility="gone" />
                <ImageView
                    android:id="@+id/imageView_save"
                    android:src="@drawable/ic_save"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/ElementsColor" />
            </FrameLayout>
            <TextView
                android:id="@+id/textForWait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="80dp"
                android:textSize="20sp"
                android:layout_alignRight="@+id/frameSaveAnim"
                android:visibility="gone"
                android:textStyle="bold"
                android:text="Please, wait..."/>
            <ImageView
                android:id="@+id/imageView_undo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignRight="@+id/frameSaveAnim"
                android:layout_centerInParent="true"
                android:layout_marginRight="130dp"
                android:padding="15dp"
                android:src="@drawable/ic_undo"
                style="@style/ElementsColor"/>
            <ImageView
                android:id="@+id/imageView_redo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignRight="@+id/frameSaveAnim"
                android:layout_marginRight="60dp"
                android:padding="15dp"
                android:src="@drawable/ic_redo"
                style="@style/ElementsColor"/>
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="15dp"
                android:src="@drawable/ic_back"
                android:id="@+id/imageView_back"
                style="@style/ElementsColor"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <EditText
        android:id="@+id/editText_title"
        android:hint="Title"
        android:background="@android:color/transparent"
        android:textColorHint="@color/light_gray"
        style="@style/Base.Theme.NotesProject"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp">
        <View
            android:id="@+id/verticalLine"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/orange"/>
        <EditText
            android:id="@+id/editText_category"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" Category"
            android:padding="6dp"
            android:textSize="12sp"
            android:background="@android:color/transparent"
            android:textColorHint="@color/light_gray"
            style="@style/Base.Theme.NotesProject"/>
    </LinearLayout>
    <TextView
        android:id="@+id/fullDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textColor="@color/light_gray"
        android:padding="6dp"
        android:textSize="12sp"
        android:visibility="gone"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imageNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="20dp"
                app:riv_corner_radius="15dp"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/editText_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Start typing"
                android:background="@android:color/transparent"
                android:layout_marginLeft="16dp"
                android:padding="8dp"
                android:textSize="18sp"
                android:textColorHint="@color/light_gray"
                style="@style/Base.Theme.NotesProject" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">
        <ImageButton
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_addimage"
            style="@style/ElementsColor"
            android:background="@null" />
        <ImageButton
            android:id="@+id/deleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete"
            style="@style/ElementsColor"
            android:visibility="gone"
            android:background="@null" />
        <ImageButton
            android:id="@+id/taskReminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_reminder"
            style="@style/ElementsColor"
            android:background="@null" />
    </LinearLayout>
</LinearLayout>