<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".NotesAddingActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_notes2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="18dp">
            <ImageView
                android:id="@+id/imageView_save"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_save"
                android:padding="15dp"
                android:background="@android:color/transparent"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"/>

            <ImageView
                android:id="@+id/imageView_undo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignRight="@+id/imageView_save"
                android:layout_centerInParent="true"
                android:layout_marginRight="130dp"
                android:padding="15dp"
                android:src="@drawable/ic_undo" />

            <ImageView
                android:id="@+id/imageView_redo"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignRight="@+id/imageView_save"
                android:layout_marginRight="60dp"
                android:padding="15dp"
                android:src="@drawable/ic_redo" />
            <ImageView
                android:layout_alignParentStart="true"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:padding="15dp"
                android:src="@drawable/ic_back"
                android:id="@+id/imageView_back"/>
        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>
    <EditText
        android:id="@+id/editText_title"
        android:hint="Title"
        android:background="@android:color/transparent"
        android:textColorHint="@color/light_gray"
        android:layout_marginLeft="16dp"
        android:padding="8dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editText_category"
        android:hint=" Category"
        android:padding="6dp"
        android:textSize="12sp"
        android:background="@android:color/transparent"
        android:textColorHint="@color/light_gray"
        android:layout_marginLeft="16dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editText_notes"
            android:hint="Start typing"
            android:background="@android:color/transparent"
            android:layout_marginLeft="16dp"
            android:padding="8dp"
            android:textSize="18sp"
            android:textColorHint="@color/light_gray"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>



</LinearLayout>